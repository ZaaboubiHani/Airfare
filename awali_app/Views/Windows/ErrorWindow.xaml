<Window x:Class="Airfare.Views.Windows.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airfare.Views.Windows" xmlns:vm="clr-namespace:Airfare.ViewModels.WindowsViewModels"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="ErrorWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:ErrorViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            
            <TextBlock TextAlignment="Center" Text="Désolé, quelque chose s'est mal passé." FontSize="30"/>
            <TextBlock TextAlignment="Center" Text="veuillez réessayer ou contacter l'assistance" FontSize="30"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock TextAlignment="Center" Text="code d'erreur: " FontSize="30"/>
                <TextBlock TextAlignment="Center" Text="{Binding ErrorCode}" FontSize="30"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
